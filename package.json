{
    "name": "cronnor",
    "version": "2.0.0",
    "description": "Bibliothèque JavaScript implémentant un programme cron.",
    "keywords": [
        "cron",
        "crontab",
        "scheduler",
        "cronnor",
        "front-end",
        "backend"
    ],
    "homepage": "https://github.com/regseb/cronnor#readme",
    "bugs": {
        "url": "https://github.com/regseb/cronnor/issues",
        "email": "regseb@gmail.com"
    },
    "license": "MIT",
    "author": "Sébastien Règne <regseb@gmail.com> (https://github.com/regseb)",
    "funding": "https://www.paypal.me/sebastienregne",
    "files": [
        "src/",
        "types/"
    ],
    "main": "src/index.js",
    "exports": {
        ".": "./src/index.js",
        "./cron.js": "./src/cron.js",
        "./cronexp.js": "./src/cronexp.js",
        "./at.js": "./src/at.js",
        "./package.json": "./package.json"
    },
    "types": "types/index.d.ts",
    "repository": "regseb/cronnor",
    "type": "module",
    "scripts": {
        "lint": "metalint",
        "lint:types": "tsc --project .tsconfig_lint.json",
        "test": "npm run test:coverage",
        "test:unit": "mocha",
        "test:coverage": "stryker run",
        "jsdocs": "typedoc --tsconfig .tsconfig_jsdocs.json --out jsdocs/ src/",
        "prepare": "tsc --project .tsconfig_types.json",
        "release": "standard-version",
        "clean": "node .script/clean.js"
    },
    "devDependencies": {
        "@stryker-mutator/core": "6.0.2",
        "@stryker-mutator/mocha-runner": "6.0.2",
        "@types/mocha": "9.1.1",
        "@types/node": "17.0.35",
        "@types/sinon": "10.0.11",
        "eslint": "8.16.0",
        "eslint-plugin-eslint-comments": "3.2.0",
        "eslint-plugin-import": "2.26.0",
        "eslint-plugin-jsdoc": "39.3.0",
        "eslint-plugin-mocha": "10.0.3",
        "eslint-plugin-no-unsanitized": "4.0.1",
        "eslint-plugin-node": "11.1.0",
        "eslint-plugin-promise": "6.0.0",
        "eslint-plugin-regexp": "1.7.0",
        "eslint-plugin-unicorn": "42.0.0",
        "jsonlint-mod": "1.7.6",
        "markdownlint": "0.25.1",
        "metalint": "0.10.0",
        "mocha": "10.0.0",
        "sinon": "14.0.0",
        "standard-version": "9.5.0",
        "typedoc": "0.22.15",
        "typescript": "4.6.4",
        "yaml-lint": "1.7.0"
    },
    "engines": {
        "node": ">=16.15.0"
    }
}
