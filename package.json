{
  "name": "cronnor",
  "version": "2.1.0",
  "description": "Bibliothèque JavaScript implémentant un programme cron.",
  "keywords": [
    "cron",
    "crontab",
    "scheduler",
    "cronnor",
    "front-end",
    "backend"
  ],
  "homepage": "https://github.com/regseb/cronnor#readme",
  "bugs": {
    "url": "https://github.com/regseb/cronnor/issues",
    "email": "regseb@gmail.com"
  },
  "license": "MIT",
  "author": "Sébastien Règne <regseb@gmail.com> (https://github.com/regseb)",
  "funding": "https://www.paypal.me/sebastienregne",
  "files": [
    "src/",
    "types/"
  ],
  "main": "src/index.js",
  "exports": {
    ".": "./src/index.js",
    "./cron": "./src/cron.js",
    "./cronexp": "./src/cronexp.js",
    "./at": "./src/at.js",
    "./package.json": "./package.json"
  },
  "types": "types/index.d.ts",
  "repository": "regseb/cronnor",
  "type": "module",
  "scripts": {
    "lint": "metalint",
    "lint:fix": "metalint --fix",
    "lint:types": "tsc --project .tsconfig_lint.json",
    "test": "npm run test:coverage",
    "test:unit": "mocha",
    "test:coverage": "stryker run .stryker.config.js",
    "jsdocs": "typedoc --tsconfig .tsconfig_jsdocs.json --out jsdocs/ src/",
    "prepare": "tsc --project .tsconfig_types.json",
    "release": "standard-version",
    "clean": "node .script/clean.js"
  },
  "devDependencies": {
    "@prettier/plugin-xml": "2.2.0",
    "@stryker-mutator/core": "6.4.1",
    "@stryker-mutator/mocha-runner": "6.4.1",
    "@types/mocha": "10.0.1",
    "@types/node": "18.14.6",
    "@types/sinon": "10.0.13",
    "eslint": "8.35.0",
    "eslint-plugin-array-func": "3.1.8",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-jsdoc": "40.0.1",
    "eslint-plugin-mocha": "10.1.0",
    "eslint-plugin-n": "15.6.1",
    "eslint-plugin-no-unsanitized": "4.0.2",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-regexp": "1.12.0",
    "eslint-plugin-unicorn": "46.0.0",
    "jsonlint-mod": "1.7.6",
    "markdownlint": "0.27.0",
    "metalint": "0.11.1",
    "mocha": "10.2.0",
    "npm-package-json-lint": "6.4.0",
    "prettier": "2.8.4",
    "sinon": "15.0.1",
    "standard-version": "9.5.0",
    "typedoc": "0.23.26",
    "typescript": "4.9.5",
    "yaml-lint": "1.7.0"
  },
  "engines": {
    "node": ">=18.12.0"
  }
