{
    "patterns": ["!.git/**", "!node_modules/**", "**"],
    "hidden": true,
    "verbose": 2,
    "checkers": [
        {
            "patterns": ["!**/*.min.js", "**/*.js"],
            "linters": "eslint"
        }, {
            "patterns": "**/*.md",
            "linters": "markdownlint"
        }, {
            "patterns": "**/*.json",
            "linters": { "jsonlint": { "comments": false } }
        }
    ]
}
